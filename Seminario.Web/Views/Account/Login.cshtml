@model Seminario.Web.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>


<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SDD - Sistema de Descuento de Documentos</title>
    </head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-3">
                    <div class="panel-body">
                        @using (Html.BeginForm(@Html.ActionLink("Home", "Index")))
{
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Legajo, new { @class = "form-control", @placeholder = "Legajo", @name = "legajo", @type = "legajo" })
                                    @Html.ValidationMessageFor(m => m.Legajo)
                               </div>
                                <div class="form-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña", @name = "password", @type = "password" })
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>
                                <div class="form-group">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                                </div>                             
                                <input type="submit" class="btn btn-lg btn-danger btn-block" value="Ingresar" />
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    
    
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/javascriptCustom")
}
