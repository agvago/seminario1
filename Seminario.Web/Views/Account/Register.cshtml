@model Seminario.Web.Models.RegisterModel

<head>
	<link rel="stylesheet" href="~/Content/bootstrap.css">
</head>

<div class="container">
			 <div class="col-md-12" style="height:100px"></div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <center><img src="~/Content/Images/logo.chico.png" title="ICBC" alt="ICBC"></center>
                    </div>
                    <div class="panel-body">
						<b>Registration Form</b>
   @using (Html.BeginForm()) {
    @Html.AntiForgeryToken()


    <fieldset>
            <div class="form-group">
              @Html.TextBoxFor(m => m.Legajo, new { @class = "form-control", @placeholder = "Legajo", @name = "legajo", @type = "legajo" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña", @name = "password", @type = "password" })
            </div>
            <div class="form-group">
				@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirmar Contraseña", @name = "passwordConfirm", @type = "password" })
            </div>
		    @Html.ValidationSummary()
        <input type="submit" value="Register" class="btn btn-lg btn-danger btn-block" />
    </fieldset>
}
                    </div>
                </div>
            </div>
        </div>
    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
